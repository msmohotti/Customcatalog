<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
<!--    <preference for="Altayer\Customcatalog\Api\ProductInterface" type="Webkul\Grid\Model\Grid"/>-->
    <preference for="Altayer\Customcatalog\Api\ProductInterface" type="Altayer\Customcatalog\Model\Product" />

    <virtualType name="Altayer\Customcatalog\Model\ResourceModel\Customcatalog\Collection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">altayer_customcatalog</argument>
            <argument name="resourceModel" xsi:type="string">Altayer\Customcatalog\Model\ResourceModel\Customcatalog</argument>
        </arguments>
    </virtualType>
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="altayer_customcatalog_product_list_data_source" xsi:type="string">Altayer\Customcatalog\Model\ResourceModel\Customcatalog\Collection</item>
            </argument>
        </arguments>
    </type>

    <type name="Altayer\Customcatalog\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Altayer\Customcatalog\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">customcatalog</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">Altayer\Customcatalog\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
</config>